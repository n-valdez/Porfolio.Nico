			</SocialPill>
				
		</nav>
	</SectionContainer>

    <SectionContainer id="experiencia" >
		<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
			<BriefCaseIcon class="size-4 lg:size-9"/>
			Experiencia Laboral
		</h2>
		<Experience/>
	</SectionContainer>

	<SectionContainer id="proyectos" >
		<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
			<CodeIcon class="size-4 lg:size-9"/>
			Proyectos
		</h2>
		<Projects/>
	</SectionContainer>

	</main>
</Layout>

